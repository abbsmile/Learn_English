<!--ncee.wxml-->

<!-- 1、展示一下介绍-->
<view class="ncee_title_intrdece_view">
    <text class="ncee_title_introduce">{{name}}</text>
</view>  

<!-- 1.1 介绍的图片-->
  <image class="ncee_image_introduce" src="{{ncee_image_introduce}}" mode="scaleToFill">
  </image>

<!-- 1.2 介绍的内容-->
<view class="ncee_cotent_introduce_view">
    <text class="ncee_content_introduce">{{description}}</text>
</view> 

<!-- 1.3 介绍的价格-->
<view class="ncee_price_introduce_view">
  <span>
    <text class="ncee_price_introduce">课程价格： </text>
    <text class="ncee_price_introduce">{{price}}</text>
  </span>
</view>

<!-- 1.4 教师id-->
<view class="ncee_teacherid_introduce_view">
  <span>
    <text class="ncee_price_introduce">教师的id号： </text>
    <text class="ncee_teacher_introduce">{{teacher_id}}</text>
  </span>
</view>

<!-- 1.5 课程id -->
<view class="ncee_teacherid_introduce_view">
  <span>
    <text class="ncee_price_introduce">课程的id： </text>
    <text class="ncee_teacher_introduce">{{course_id}}</text>
  </span>
</view>

<!--2、购买该课程 -->
<text class="ncee_purchase_introduce"> 你想购买该课程么？</text>
<view class="ncee_purchase_view">
    <navigator url="../purchase_ncee/purchase_ncee?course_id={{course_id}}">购买</navigator>
</view>







